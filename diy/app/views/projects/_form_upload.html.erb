<%= form_for @project.project_upload, html: { multipart: true } do |f| %>
  <% if @project.project_upload.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.project_upload.errors.count, "error") %> prohibited this image from being saved:</h2>
      <ul>
      <% @project.project_upload.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image_url %>

    <% if f.object.image_url? %>
      <%= image_tag f.object.image_url.thumb.url %>
      <%= f.label :remove_image_url %>
      <%= f.check_box :remove_image_url %>
    <% end %>
    <br>
    <%= f.file_field :image_url %>
    <%= f.hidden_field :image_url_cache %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>